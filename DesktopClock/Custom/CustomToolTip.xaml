<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DesktopClock.Custom">
    <Style x:Key="DefaultToolTipStyle" TargetType="{x:Type ToolTip}">
        <Setter Property="Foreground" Value="#BFFFFFFF"/>
        <Setter Property="HorizontalOffset" Value="10"/>
        <Setter Property="VerticalOffset" Value="10"/>
        <Setter Property="Background" Value="#BF000000"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderBrush" Value="#7FFFFFFF"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="2000"/>
        <Setter Property="ToolTipService.ShowDuration" Value="5000"/>
    </Style>

    <Style TargetType="{x:Type ToolTip}" BasedOn="{StaticResource DefaultToolTipStyle}"/>
</ResourceDictionary>